	"custom/exit": {
		"format": "Óèö",
		"tooltip": true,
		"tooltip-format": "Power off menu",
		"on-click": "logout_menu.sh",
	},
	"pulseaudio/slider": {
		"min": 0,
		"max": 100,
		"orientation": "horizontal"
	},
}
