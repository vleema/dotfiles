{
	"layer": "top", // Waybar at top layer
	"position": "top", // Waybar at the bottom of your screen
	"margin": "10 10 0 10", // above, right, below, left
	// "height": 24, // Waybar height
	// "spacing": 4, // Gaps between modules (4px)
	// "width": 1366, // Waybar width
	// Choose the order of the modules
	"modules-left": [
		"hyprland/workspaces",
		"hyprland/submap"
	],
	"modules-center": [
		"clock"
		// "custom/spotify",
	],
	"modules-right": [
		// "pulseaudio/slider",
		"battery",
		"battery#percentage",
		"pulseaudio",
		"pulseaudio#percentage",
		"custom/cpu-icon",
		"cpu",
		"custom/memory-icon",
		"memory",
		"custom/updates-icon",
		"custom/updates",
		// "custom/hypridle",
		"idle_inhibitor",
		"bluetooth",
		"network",
		"custom/exit"
	],
	// ============ [ Workspaces ] ===============
	"hyprland/workspaces": {
		"active-only": false,
		"disable-scroll": true,
		"all-outputs": false,
		"warp-on-scroll": false,
		// "format": "<small>{name}</small>:{icon}",
		"tooltip-format": "oi",
		"tooltip": true,
		"format": "{icon}",
		"format-icons": {
			// "1": "Óëæ",
			// "1": "Ó´®",
