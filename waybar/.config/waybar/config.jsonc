			// "3": "ÓÖº",
			// "4": "Óòö",
			// "5": ""Ó´®,
			// "5": "ÓôÆ",
			// "6": "Ó¥≤",
			// "7": "Ó¥≤",
			// "8": "Ó°¥",
			// "9": "Ó°¥",
			// "10": "Óß†",
			// "10": "Ó∞§",
			// "urgent": "Óì§"
			// "focused": "&#xeb8d;",
			// "default": "&#xf671;"
		},
		"persistent-workspaces": {
			// "1": []
			// "2": [],
			// "3": [],
			// "4": [],
			// "5": [],
		}
	},
	// ============ [ Network ] ===============
	"network": {
		"format": "{ifname}",
		"format-wifi": "Óì™",
		"format-ethernet": "Ó∑û",
		"format-linked": "{ifname}",
		"format-disconnected": "Óì≤",
		// "tooltip-format": "Û∞åò {ifname} via {gwaddri}",
		"tooltip-format-wifi": "{essid} {signalStrength}%",
		// "tooltip-format-wifi": "Ôá´ {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nÔÑπ {bandwidthUpBits} ÔÑ∫ {bandwidthDownBits}",
		"tooltip-format-ethernet": "IP: {ipaddr}\n ÔÑπ {bandwidthUpBits} ÔÑ∫ {bandwidthDownBits}",
