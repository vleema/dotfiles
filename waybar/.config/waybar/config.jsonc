		"max-length": 50,
		// "format-icons": {
		//     "default": ["Óì¨", "ÓìÆ", "Óì™"]
		// },
		"on-click": "dmenu_networkmanager",
	},
	// ============ [ Updates ] ===============
	"custom/updates-icon": {
		"format": "ÓÄé",
		"tooltip": true,
		"tooltip-format": "Synchronizes pacman",
		"on-click": "kitty -e doas pacman -Sy", // update system
	},
	"custom/updates": {
		"format": "{}",
		"tooltip": false,
		"interval": 600, // every 10 min.
		"exec": "package_update.sh value", // # of updates
		"exec-if": "exit 0", // always run; consider advanced run conditions
		"signal": 8
	},
	// ============ [ Audio ] ===============
	"pulseaudio": {
		"on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
		"format": "{icon}",
		"format-muted": "Óëñ",
		"tooltip": true,
		"tooltip-format": "Mutes volume",
		"max-volume": 100,
		"format-icons": {
			"default": [
				"Óëî",
				"Óëí",
				"Óëê"
			]
		}
	},
	"pulseaudio#percentage": {
		"max-volume": 100,
		"tooltip": true,
		"tooltip-format": "Calls pavucontrol",
		"on-click": "pavucontrol",
		"format": "{volume}%"
	},
	// ============ [ Battery ] ===============
	"battery": {
		"states": {
			"warning": 30,
			"critical": 15
		},
		"format": "{icon}",
		"format-charging": "Û∞ÇÑ",
		"format-plugged": "",
		"format-full": "",
		"format-icons": [
			"Û∞Çé",
			"Û∞Å∫",
			"Û∞Åª",
			"Û∞Åº",
			"Û∞ÅΩ",
			"Û∞Åæ",
			"Û∞Åø",
			"Û∞ÇÄ",
			"Û∞ÇÅ",
			"Û∞ÇÇ",
			"Û∞Åπ"
		],
		"tooltip-format": "{time}"
	},
	"battery#percentage": {
		"states": {
			"warning": 30,
			"critical": 15
		},
		"format": "{capacity}%",
		"tooltip-format": "{time}"
	},
	// ============ [ Date ] ===============
	"custom/date-icon": {
		"format": "Óû¥",
		"tooltip": false
	},
	"clock": {
		// "format": "{:%a %b %d  %R}",
		"format": "{:%R üûÑ %a %d %b}",
		"tooltip-format": "<span font_family='SFMono Nerd Font Mono' font_size='10pt'>{calendar}</span>",
		"calendar": {
			"mode": "month",
			"mode-mon-col": 3,
			"weeks-pos": "right",
			"on-scroll": 1,
			"format": {
				"months": "<span color='#ffead3'><b>{}</b></span>",
				"days": "<span color='#ecc6d9'><b>{}</b></span>",
				"weeks": "<span color='#74c7ec'><b>W{}</b></span>",
				"weekdays": "<span color='#ffcc66'><b>{}</b></span>",
				"today": "<span color='#ff6699'><b><u>{}</u></b></span>"
			}
		},
	},
	// ============ [ Bluetooth ] ===============
	"bluetooth": {
		// "controller": "controller1", // specify the alias of the controller if there are more than 1 on the system
		"format": "ÓÉö",
		"format-disabled": "ÓÉû", // an empty format will hide the module
		"format-connected": "ÓÉú",
		// "format-off": "&#xeceb;",
		"format-off": "",
		"on-click": "blueman-manager",
		"tooltip-format": "{controller_alias}\t{controller_address}",
		"tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
		"tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
		"tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%"
	},
	// ============ [ CPU ] ===============
	"custom/cpu-icon": {
		"format": "Óòê",
		"tooltip": true,
		"tooltip-format": "Calls htop",
		"on-click": "kitty htop",
	},
	"cpu": {
		"format": "{usage}%"
	},
	// ============ [ Memory ] ===============
	"custom/memory-icon": {
		"format": "ÓßÑ",
		"tooltip": false,
		"on-click": "kitty htop",
	},
	"memory": {
		"format": "{}%"
	},
	// ============ [ Inhibitor ] ===============
	"idle_inhibitor": {
		"format": "{icon}",
		"format-icons": {
			"activated": "Óà†",
			"deactivated": "Óà§"
		},
		"tooltip-format-activated": "Idle inhibitor is ON.\nLeft click to turn it off.",
		"tooltip-format-deactivated": "Idle inhibitor is OFF.\nLeft click to turn it on."
	},
	// ============ [ Hypridle inhibitor ] ===============
	"custom/hypridle": {
		"format": "{icon}",
		"format-icons": {
			"0": "Óåà",
			"1": "Óåä"
		},
		"return-type": "json",
		"escape": true,
		"exec-on-event": true,
		"interval": 60,
		"exec": "hypridle.sh status",
		"on-click": "hypridle.sh toggle",
		"on-click-right": "hyprlock"
	},
	// ============ [ Submap indication ] ===============
	"hyprland/submap": {
		"format": "ÓáÑ",
		"max-length": 12,
		"tooltip": true,
		// "tooltip-format": "'a': deactivate animation\n'b': browser"
	},
	// ============ [ mode ] ===============
	"hyprland/mode": {
		"format": "<span style=\"italic\">{}</span>"
	},
	// ============ [ Tray ] ===============
	"tray": {
		// "icon-size": 21,
		"spacing": 10
	},
